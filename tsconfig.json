{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@api/*": ["./src/api/*"],
      "@theme/*": ["./src/theme/*"],
      "@icons/*": ["./src/icons/*"],
      "@global/*": ["./src/global/*"]
    }
  },
  "compileOnSave": true,
  "include": ["./src/*", "./src/**/*"]
}
